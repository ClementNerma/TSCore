{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es5",
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}