{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "incremental": true,
    "lib": [
      "esnext"
    ],
    "target": "es5",
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ]
}
